# Stage 1: Build do Vue
FROM node:20-bookworm-slim as builder

WORKDIR /app

# Para Docker/VPS servindo na raiz (/) e nÃ£o em /tailadmin-vuejs/
# (evita 404 em /tailadmin-vuejs/assets/*)
ENV VITE_BASE=/

COPY package*.json ./
RUN npm ci

COPY . .

RUN npm run build

# Stage 2: Serve com Nginx
FROM nginx:1.27-alpine

COPY --from=builder /app/dist /usr/share/nginx/html

# Usa config nginx custom (SPA fallback + proxy /api -> api:3000)
COPY nginx/default.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]